doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title H5book
        
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
        link(rel="stylesheet", href="/css/styles.css")

    body.m-0
        header.flex.items-center.justify-between.px-4.py-2.bg-gray-800.text-white.cursor-pointer.py-3.sticky.top-0.z-50
            h1.title H5book Chat
            div
            svg.w-4.h-4.text-gray-800 (aria-hidden="true", xmlns="http://www.w3.org/2000/svg", fill="none", viewBox="0 0 20 20")
                            path(stroke="white", stroke-linecap="round", stroke-linejoin="round", stroke-width="2", d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z")
        main.flex 
            section(style="width: 20%; margin: 10% auto 0; border: 1px solid gray").rounded-lg.flex.flex-col.gap-y-2.shadow-2xl
                div.flex.justify-center.items-center.flex-col.gap-y-2.py-2
                    img.w-24.object-cover.aspect-square.rounded-full.h-24.border-yellow-500.border-2(src="./img/image.png", alt="Description de l'image")
                    h2(style="font-size: 15px;").text-gray-500.font-bold Connexion
                form.px-4.py-3.bg-gray-800.flex.flex-col.gap-y-8.rounded-b-lg
                    input(type="text", id="username", placeholder="Entre ton pseudo", required).bg-gray-800.px-3.py-2.rounded.text-white.mt-2(style="border-bottom: 1px solid white; outline: none; font-size: 13px")
                    input(type="password", id="password", placeholder="Entre ton mot de passe", required).bg-gray-800.px-3.py-2.rounded.text-white(style="border-bottom: 1px solid white; outline: none; font-size: 13px")
                    div.flex.justify-end
                        span#submit(style="width: 30%; font-size: 13px").bg-yellow-500.px-3.py-2.text-white.rounded.cursor-pointer.text-center Login


        <script src="/scripts/login.js"></script>